datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-py"
}

model File {
  id        String    @id @default(uuid())
  file_name String
  file_path String    @unique
  extension String
  created   DateTime
  modified  DateTime
  size      Int
  hash      String
  keywords  Keyword[]
}

model Keyword {
  id      String @id @default(uuid())
  keyword String
  file    File   @relation(fields: [fileId], references: [id])
  fileId  String
}
